    <![endif]-->
  </head>
  <body class="{{body_class}}">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          {{#if @blog.logo}}
            <div class="text-center">
              <a href="{{@blog.url}}" class="blog-logo" style="background: url({{@blog.logo}})"></a>
            </div>
          {{/if}}
          <div class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></div>
          <div class="blog-description">{{@blog.description}}</div>
          <hr class="visible-xs visible-sm">
        </div>
        <div class="col-md-9">
          {{{body}}}         
        </div>
        <div class="col-md-offset-3 col-md-9">
          <footer>
               <section class="copyright">All content copyright <a href="/">{{@blog.title}}</a> © 2014 • All rights reserved.</section>
               <section class="poweredby">Proudly published with <a class="icon-ghost" href="http://ghost.org">&nbsp;</a><a href="http://ghost.org">Ghost</a></section>
          </footer>
        </div>
      </div>
    </div>

    {{ghost_foot}}
